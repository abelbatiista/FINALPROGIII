@page "/DetailsInvoice/{id:int}"
@inject IInvoiceService InvoiceService
@inject IClientService ClientService
@inject IBookingService BookingService
<h3>Detalles de Factura</h3>

<div class="text-center" style="">
    <div class="card" style="width: 18rem;margin:auto;">
        <img class="card-img-top" src="@client.CedulaImage" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@client.Name @client.LastName</h5>

        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">ID DE RESERVA: @booking.BookingId</li>
            <li class="list-group-item">MONTO: @invoice.Amount</li>
            <li class="list-group-item">MONTO PAGADO: @invoice.AmountPaid</li>
            

        </ul>
    </div>
</div>
@code {
    [Parameter]
    public int id { get; set; }

    private Client client = new Client();
    private Invoice invoice = new Invoice();
    private Booking booking = new Booking();

    protected override async Task OnInitializedAsync()
    {
        invoice = await InvoiceService.GetInvoiceDetails(id);
        booking = await BookingService.GetBookingDetails(invoice.BookingId);
        client = await ClientService.GetClientDetails(booking.ClientId);
    }
}
